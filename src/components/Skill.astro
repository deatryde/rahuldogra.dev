---
import { Icon } from 'astro-icon';
export interface Props {
  text: string;
  logo: string;
}
const { text, logo } = Astro.props;
---

<div class='flex items-center gap-4'>
  <span
    class='w-12 h-12 flex items-center justify-center border-t border-zinc-700 bg-zinc-800 rounded-full'
  >
    <Icon name={logo} class='w-7' />
  </span>
  <p class='text-zinc-400'>{text}</p>
</div>
