---
import Navlink from '@components/Navlink.astro';

export interface Props {
  title?: string;
  description?: string;
  heroImage?: string;
  imageAlt?: string;
}

const defaultMeta = {
  title: 'Rahul Dogra Studio â€¢ Modern Software Engineering',
  description:
    'Modern Software Engineering, TypeScript enthusiast, Gopher and a passionate learner.',
  image: 'banner.png',
  imageAlt: 'Photo of the author smiling',
};

const {
  title = defaultMeta.title,
  description = defaultMeta.description,
  heroImage = defaultMeta.image,
  imageAlt = defaultMeta.imageAlt,
} = Astro.props as Props;

const socialImageURL = new URL(`/static/${heroImage}`, Astro.site);
const canonicalURL = new URL(Astro.url).href;
---

<html lang='en' class='scroll-smooth'>
  <head>
    <meta charset='utf-8' />
    <meta name='viewport' content='width=device-width' />
    <title class='font-bold'>{title}</title>
    <link rel='icon' type='image/svg+xml' href='/favicon.svg' />
    <link rel='canonical' href={canonicalURL} />
    <meta name='title' content={title} />
    <meta name='description' content={description} />
    <meta property='og:type' content='website' />
    <meta property='og:url' content={canonicalURL} />
    <meta property='og:title' content={title} />
    <meta property='og:description' content={description} />
    <meta property='og:image' content={socialImageURL} />
    <meta property='og:site_name' content='Rahul Dogra Studio' />
    <meta property='og:image:alt' content={imageAlt} />
    <meta property='og:locale' content='en' />
    <meta property='article:published_time' content='' />
    <meta property='twitter:card' content='summary_large_image' />
    <meta property='twitter:url' content={canonicalURL} />
    <meta name='twitter:site' content='@_rahuldogra' />
    <meta name='twitter:creator' content='@_rahuldogra' />
    <meta property='twitter:title' content={title} />
    <meta property='twitter:label' content='Written by' />
    <meta property='twitter:description' content={description} />
    <meta property='twitter:image' content={socialImageURL} />
    <meta name='generator' content={Astro.generator} />
    <meta name='robots' content='follow, index' />
    <meta name='author' content='Rahul Dogra' />
  </head>

  <body
    class='scrollbar-thin scrollbar-thumb-red-600 scrollbar-track-zinc-800 hover:scrollbar-thumb-red-500 bg-zinc-900 antialiased selection:bg-red-600 selection:text-white py-8'
  >
    <nav
      class='mb-16 mx-auto flex items-center justify-start overflow-x-auto sm:overflow-x-visible px-3 w-5/6 max-w-min rounded-2xl ring-1 ring-zinc-700/80 bg-zinc-800/60 sm:w-auto'
    >
      <Navlink href='/' text='Home' />
      <Navlink
        href='https://www.linkedin.com/in/irahuldogra'
        rel='noopener noreferrer'
        target='_blank'
        text='LinkedIn'
      />
      <Navlink
        href='https://github.com/irahuldogra'
        target='_blank'
        rel='noopener noreferrer'
        text='GitHub'
      />
    </nav>
    <main class='px-6 lg:px-0 mx-auto max-w-3xl'>
      <slot />
    </main>
  </body>
</html>
